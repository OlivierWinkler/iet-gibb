<Window x:Class="M120Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M120Projekt"
        mc:Ignorable="d" 
        Height="643" Width="666"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <DockPanel Background="Aqua" DockPanel.Dock="Top" >
            <Label DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalContentAlignment="Center" Content="Auto CRUD-Applikation" Height="50" IsHitTestVisible="False" BorderThickness="0" Margin="0 0 25 0"/>
            <Button DockPanel.Dock="Left" VerticalAlignment="Center" Click="zurückButtonClick" Margin="15 0 0 0" Height="60" BorderThickness="0" Opacity="0.8" Background="Transparent" HorizontalAlignment="Left" Name="zurückButton" ></Button>
        </DockPanel>
        <Grid x:Name="contentContainer">

        </Grid>
    </DockPanel>
</Window>
